<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="styles.css">
    <title></title>
  </head>
  <body>
    <h1><a href="http://localhost:3000/users/add">Add user</a></h1>
    <ul>
      {{ #users }}
        <div>
          <li><img src={{ avatar }}></li>
          <a href="/users/{{ id }}">
            <li class='name'>{{ name }}</li>
          </a>
            {{ #job }}
              <li>{{ job }}</li>
              <li>{{ company }}</li>
            {{ /job }}
            {{ ^job }}
              <li class='avail'>Available for Hire</li>
            {{ /job }}
        </div>
      {{ /users }}
    </ul>
  </body>
</html>
